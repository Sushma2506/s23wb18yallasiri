extends layout

block content
  h1= title
  p Welcome to Sushma's server.
  button(type="button" class="btn btn-secondary btn-lg" onclick="doReduce()") Press me!
  div(class="div-class" id="reduce" ) Reduce the value
  script.
   var count = 20;
   var change = -1;
   function doReduce(){
     count = count + change;
     change = change-1;
     document.getElementById("reduce").innerHTML = `Count ${count} with change ${change}`
   }
     